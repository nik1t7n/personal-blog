---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import BlogFeed from '../components/BlogFeed';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const title = "Nikita's blog";
const description = "Personal thoughts on technology, practical tips, and honest reviews from the field.";
---

<BaseLayout title={title} description={description}>
	<section>
		<h1 class="text-4xl font-bold mb-12 text-center bg-clip-text text-transparent bg-linear-to-r from-neutral-900 to-neutral-600 dark:from-white dark:to-neutral-400">
			Latest Posts
		</h1>
		<BlogFeed client:load posts={posts} />
	</section>
</BaseLayout>
